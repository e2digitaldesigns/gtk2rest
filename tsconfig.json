{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "baseUrl": "./src",
    "paths": {
      "utils/*": ["utils/*"]
    },

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
